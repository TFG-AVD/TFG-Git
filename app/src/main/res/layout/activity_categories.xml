<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendedor.SellerProductCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Categorias"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/botanica_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/botanica"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/bricolaje_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bricolaje"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/comida_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comida"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/deporte_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/deporte"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/botanica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Botánica"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bricolaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bricolaje"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/comida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comida"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/deporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deporte"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_name_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/drogueria_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drogueria"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/electrodomesticos_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/electrodomesticos"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/electronica_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/electronica"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/ferreteria_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ferreteria"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/drogueria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Droguería"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/electrodomesticos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electrodomésticos"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/electronica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electrónica"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ferreteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ferretería"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_name_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/hogar_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hogar"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/mascota_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mascotas"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/ocio_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ocio"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/papeleria_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/papeleria"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/hogar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hogar"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/mascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mascotas"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocio"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/papeleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Papelería"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

