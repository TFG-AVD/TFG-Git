<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comprador.ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agrega la dirección del envio"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/envio_nombre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Nombre..."
        android:paddingStart="10dp"
        android:background="@drawable/input_design" />

    <EditText
        android:id="@+id/envio_telefono"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/envio_nombre"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Número de teléfono..."
        android:paddingStart="10dp"
        android:background="@drawable/input_design"
        android:maxLength="9"/>

    <EditText
        android:id="@+id/envio_direccion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/envio_telefono"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Dirección..."
        android:paddingStart="10dp"
        android:background="@drawable/input_design" />

    <EditText
        android:id="@+id/envio_ciudad"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/envio_direccion"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Ciudad..."
        android:paddingStart="10dp"
        android:background="@drawable/input_design" />

    <Button
        android:id="@+id/confirmar_pedido_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@color/principal"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="pagar" />

    <Button
        android:id="@+id/contrareembolso_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:background="@color/principal"
        android:text="Contrareembolso"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>

