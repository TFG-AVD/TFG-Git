<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comprador.LoginActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/login_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="15dp"
        android:hint="Teléfono"
        android:inputType="number"
        android:padding="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/smartphone"/>

    <EditText
        android:id="@+id/login_contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_telefono"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/key"/>

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/login_contraseña"
        android:layout_marginTop="10dp"
        >

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/recuerdame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuérdame"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="17dp"/>

    <TextView
        android:id="@+id/olvidadoContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste la contraseña?"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"
        />

    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_1"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="INICIAR SESIÓN"
        android:background="@color/principal"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soy Admin"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/login_btn"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginEnd="23dp"
        />

    <TextView
        android:id="@+id/no_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No soy Admin"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_btn"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="23dp"
        />

</RelativeLayout>