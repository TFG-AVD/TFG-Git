<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comprador.RegisterActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/registro_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="15dp"
        android:hint="Nombre"
        android:inputType="text"
        android:padding="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/user"
        />

    <EditText
        android:id="@+id/registro_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registro_username_input"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Teléfono"
        android:inputType="number"
        android:maxLength="9"
        android:padding="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/smartphone"/>

    <EditText
        android:id="@+id/registro_contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registro_telefono"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/key"/>

    <Button
        android:id="@+id/registro_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registro_contraseña"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="15dp"
        android:padding="17dp"
        android:text="Crear Cuenta"
        android:background="@color/principal"
        android:textColor="@color/white"
        android:textSize="16dp" />


</RelativeLayout>