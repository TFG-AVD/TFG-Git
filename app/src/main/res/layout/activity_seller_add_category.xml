                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/electronica" />
            <ImageView
                android:id="@+id/ferreteria_foto"
                android:layout_width="wrap_content"
